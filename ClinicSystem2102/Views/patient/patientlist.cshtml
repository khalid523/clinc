@model List<patient>
@{
    Layout = "~/views/Shared/LayoutPage.cshtml";
}
@section Body{ 

    <form method="post">
        <div class="row">
            <div class="col-sm-1">
                <span>Name</span>
            </div>
            <div class="col-sm-5">
                <input type="text" class="form-control" name="txtName"/>
            </div>
            <div class="col-sm-2">
                <input type="submit" value="search" class="btn btn-primary" asp-action="search"/>


            </div>

        </div>
        <div class="row">
            <div class="col-sm-12">
                <table class="table table-bordered table-hover table-striped"   >
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>phone</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (patient item in Model)
                        {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.phone</td>
                        </tr>
                        }
                    </tbody>

                </table>

            </div>

        </div>
    </form>


}